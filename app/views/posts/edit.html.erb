<main>
  <div class="container">
    <div class="row">
      <%= form_with model: @post, local:true do |f| %>
              <div class="field">
                <%= f.label :title %><br />
                <%= f.text_field :title %>
              </div>
              
              <div class="field">
                <%= f.label :body %><br />
                <%= f.text_field :body %>
              </div>
              
              <div class="actions">
              <%= f.submit "嘆く", class: "btn btn-success" %>
              </div>
            <% end %>
    </div>
  </div>
</main>