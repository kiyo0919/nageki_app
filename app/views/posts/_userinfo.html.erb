<main>
  <div class="user-info">
    <div class="new-post">
      <h2>投稿フォーム</h2>
      <%= form_with model: post, local:true do |f| %>
        <div class="field">
          <%= f.label :title %><br />
          <%= f.text_field :title %>
        </div>
        
        <div class="field">
          <%= f.label :body %><br />
          <%= f.text_field :body %>
        </div>
        
        <div class="actions">
        <%= f.submit "嘆く", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</main>