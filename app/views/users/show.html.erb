<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render "posts/userinfo", post: @post, user: @user %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h1>ユーザー詳細画面</h1>
          <table class="table">
            <thead>
              <tr>
                <th>タイトル</th>
                <th>本文</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
              <tr>
                <td>
                  <%= link_to post.title, post_path(post) %>
                </td>
                <td><%= post.body %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</main>