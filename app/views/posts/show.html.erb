<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render "posts/userinfo", post: @new_post, user: @user %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h1>投稿詳細</h1>
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>タイトル</th>
                <th>本文</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= attachment_image_tag @post.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: '50x50' %>
                </td>
                <td>
                  <%= @post.title %>
                </td>
                <td>
                  <%= @post.body %>
                </td>
                <td>
                  <% if @user == current_user %>
                    <%= link_to "編集", edit_post_path(@post.id), class: "btn btn-sm btn-primary" %>
                  <% end %>
                </td>
                <td>
                  <% if @user == current_user %>
                    <%= link_to "削除", post_path(@post.id), method: :delete, 'data-confirm' => "本当に消しますか？", class: "btn btn-sm btn-danger" %>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</main>

